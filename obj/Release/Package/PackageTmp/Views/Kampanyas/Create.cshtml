                @Html.ValidationMessageFor(model => model.kampanya_qiymeti, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.kampanya_info, htmlAttributes: new { @class = "control-label col-md-2" })

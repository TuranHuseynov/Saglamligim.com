@model AzmanAzWebPage.Models.Kampanya

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Az/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Kampanyas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

@model AzmanAzWebPage.Models.Zakazim

@{

    Layout = "~/Areas/Az/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <section id="forma">
            <div class=" container">
                <div class="row">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.zakazim_id)

                    <div class="col-md-6">


                        <div class="form-group">
                            <h4>Ad,Soyad</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.zakazim_adi_soyad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.zakazim_adi_soyad, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <h4>Telefon</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.zakazim_telefon, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.zakazim_telefon, "", new { @class = "text-danger" })
                            </div>
                        </div>



                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <h4>Məhsul</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.zakazim_mehsul, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.zakazim_mehsul, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h4>Tarix</h4>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.zakaz_vaxti, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.zakaz_vaxti, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <h4>Sifariş Növü</h4>
                            <div class="col-md-10">
                                @Html.DropDownList("zakaz_novu_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.zakaz_novu_id, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Saxla" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }

    <div>
        @Html.ActionLink("Geri", "Index")
    </div>
</body>
</html>
<style>
    h4 {
        font-size: 1.3rem;
        position: relative;
        left: 27px;
    }
</style>


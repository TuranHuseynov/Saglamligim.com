@model AzmanAzWebPage.Viewmodel.MyModel
@{
    ViewBag.Title = "Kompanya";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="blog">
    <div class="container">
        @foreach (var item in Model._kampanyalar)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="itemblog">
                        <img src="~/Yuklenen/@item.kampanya_photo" style="width:100%;transition: .4s linear;" />
                    </div>
                </div>
                <div class="col-md-6">
                    <h2 class="text-center">@item.kampanya_adi</h2>
                    <h3>Qiymət : @item.kampanya_qiymeti</h3>

                    <p style="font-size: 19px;letter-spacing: 1px;line-height: 33px;">@item.kampanya_info</p><br>
                </div>
            </div>
            <div class="row">
                 <div id="gizliform" style="display: block;">
                        <div class="container">
                            <div class="col-md-12 col-xs-12">
                                <form action="/Home/BlogFormKampanya" method="post" name="frm">
                                    <div class="md-form mb-5">
                                        <i class="fa fa-user prefix grey-text"></i>
                                        <label data-error="wrong" data-success="right" for="form3">Ad,Soyad</label>
                                        <input type="text" id="form3" class="form-control validate" name="zakazim_adi_soyad" style="margin-bottom: 20px;">
                                    </div>
                                    <div class="md-form mb-4">
                                        <i class="fa fa-phone" aria-hidden="true"></i>
                                        <label data-error="wrong" data-success="right" for="form2">Telefon</label>
                                        <input type="tel" name="zakazim_telefon" id="form2" class="form-control validate">
                                    </div>
                                    <input type="text" name="zakazim_mehsul" style="display:none" value="@item.kampanya_mehsullari (kampanya)" />

                                    <div class="text-center">
                                        <button type="submit" style="margin: 20px;font-size: 19px;padding: 6px 27px;border: 1px solid #ccc;border-radius: 42px;background: #175f75;color: white;" onclick="return IsEmpty()">SİFARİŞ</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                  </div>
            </div>

        }
    </div>
</section>

<script type="text/javascript">

    function IsEmpty() {
        if (document.forms['frm'].zakazim_adi_soyad.value === "" || document.forms['frm'].zakazim_telefon.value === "") {
            alert("Hər iki bölməni doldurun");
            return false;
        } else {
            alert("Sorğunuz qeydə alındı");
            return true;
        };
    };

</script>
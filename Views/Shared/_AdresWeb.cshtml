@foreach (var item in Model._adresim)
{
    <div class="sosial text-center">
        <a href="@item.adres_facebook"><i class="fa fa-facebook"  onmouseover="changeface(this)"  aria-hidden="true"></i></a>
        <a href="@item.adres_instagram"><i class="fa fa-instagram" aria-hidden="true" onmouseover="change(this)"  onmouseout="normalinst(this)" style="padding: 9px 14px;"></i></a>

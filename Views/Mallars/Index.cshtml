@model AzmanAzWebPage.Viewmodel.MyModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Az/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Şəkil
        </th>
        <th>
            Ad
        </th>
        <th>
            Qiymət

        </th>
        <th>
            Başlıq
        </th>
        <th>
            Mal növü
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model._mallar)
    {
        <tr>
            <td>
                <img src="~/Yuklenen/@item.mal_resmi" style="width:87%;" />
            </td>

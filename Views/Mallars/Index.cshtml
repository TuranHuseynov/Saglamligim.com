                @Html.DisplayFor(modelItem => item.mal_adi)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mal_qiymeti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mal_bawliq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MalNovu.mal_novu_ad)
            </td>
            <td>
                @Html.ActionLink("Düzəlt", "Edit", new { id = item.mal_id }) |
                @Html.ActionLink("Ətraflı", "Details", new { id = item.mal_id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.mal_id })

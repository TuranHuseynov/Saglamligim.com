@model IEnumerable<AzmanAzWebPage.Models.Endirim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Az/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Endirimlər</h2>

<p>
    @Html.ActionLink("Əlavə et", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Endirim növü
        </th>
        <th>
            Endirim faizi
        </th>
        <th>
            Endirim haqqında
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.endirim_novu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edirim_faiz)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endirim_detail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.endirim_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.endirim_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.endirim_id })
        </td>
    </tr>
}

</table>
